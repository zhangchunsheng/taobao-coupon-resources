.xianshi-nav {
  position: fixed;
  z-index: 2;
  left: 0;
  top: 0;
  width: 100%;
  height: 102rpx;
}

.event-tabs-scroller {
  position: relative;
  width: 100%;
  height: 102rpx;
}
.event-tabs-scroller:before {
  content: "";
  display: block;
  pointer-events: none;
  position: absolute;
  z-index: -2;
  left: 0;
  top: 0;
  width: 100%;
  height: 92rpx;
  background-color: #313131;
}
.topbar-box {
  display: flex;
  position: absolute;
  min-width: 100%;
  height: 102rpx;
}



.topbar-item {
  flex: 1;
  color: #eee;
  text-align: center;
  opacity: 0.7;
}

.active {
  color: #eee;
  position: relative;
  opacity: 1.0;
}

.active::after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 102rpx;
  background: url(data:image/png;base64,) no-repeat 50% 100%;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}

.bottom_bar {
  width: 100%;
  height: 90rpx;
  background: #fff;
  line-height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 8;
}

.bottom-left {
  width: 40%;
  height: 100%;
  float: left;
}

.bottom-right {
  width: 30%;
  height: 100%;
  float: left;
  font-size: 28rpx;
  text-align: center;
}

.qhj-text {
  float: left;
  color: red;
  font-size: 32rpx;
  position: relative;
  margin-left: 10rpx;
}

.yj-text {
  float: left;
  margin-left: 20rpx;
  color: #888;
  margin-top: 4rpx;
}

.coupon-btn {
  color: white;
  background: linear-gradient(to left, #fe4900, #ff7601);
}

.point-btn {
  color: white;
  background: linear-gradient(to left, #ff9501, #ffcb01);
}

.icon-box {
  display: flex;
  height: 100%;
}

.icon-item {
  flex: 1;
}

.icon-image {
  width: 36rpx;
  height: 45rpx;
  margin: 0 auto;
  line-height: 45rpx;
}

.icon-text {
  font-size: 24rpx;
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  color: #000;
}

button {
  padding-left: 0;
  padding-right: 0;
}

button[plain] {
  border: 0;
}

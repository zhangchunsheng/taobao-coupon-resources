

.props-box {
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx solid #e7e7e7;
  font-size: 28rpx;
  line-height: 60rpx;
}

.props-left {
  width: 30%;
  float: left;
  color: #999;
}

.props-right {
  width: 70%;
  float: left;
}

.tab {
  width: 100%;
  height: 70rpx;
  font-size: 36rpx;
  text-align: center;
  border-style: solid;
  border-width: 2rpx;
  border-color: #ff7424;
  color: #ff640b;
  line-height: 70rpx;
}

.tab-item {
  float: left;
  width: 50%;
  height: 100%;
}

.tab-item-active {
  color: white;
  background: linear-gradient(to left, #ff640b, #ff833c);
}



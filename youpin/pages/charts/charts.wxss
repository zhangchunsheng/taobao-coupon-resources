@import '/template/goodsBox/index.wxss';
@import '/template/toTop/toTop.wxss';
.tab-box {
  height: 130rpx;
  width: 100%;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5;
  background: #fff;
  border-radius: 10rpx;
}

.tab-item {
  flex: 1;
  display: inline-block;
  padding: 0 10px;
  box-sizing: border-box;
  overflow: hidden;
  text-align: center;
  min-width: 80px;
}
.tab-active{
  color:#ff464e;
}

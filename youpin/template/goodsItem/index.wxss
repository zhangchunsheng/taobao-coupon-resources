.goods-item {
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 48%;
  margin-bottom: 1rpx;
  padding: 1%;
}

.goods-title {
  color: #1e1e1e;
  font-size: 28rpx;
  max-height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.i_quan {
  left: 0;
  text-align: left;
  width: 120rpx;
  position: absolute;
  top: 280rpx;
  font-size: 26rpx;
  color: #fff;
  background-size: contain !important;
  font-family: '微软雅黑';
  font-weight: normal;
}

.goods-item1 {
  padding-bottom: 30rpx;
  width: 100%;
}

.goods-box {
  background: #fff;
  padding: 10rpx;
  height: 205rpx;
}

.goods-img {
  width: 30%;
  float: left;
  height: 100%;
}

.goods-info {
  float: left;
  width: 70%;
}

.info-box {
  width: 70%;
  float: left;
  position: relative;
}

.coupon-box {
  line-height: 1.2;
  float: right;
  text-align: center !important;
  padding: 0 !important;
  width: 30%;
  position: relative;
}

.coupon-box-in {
  margin-top: -20rpx;
  vertical-align: middle;
  display: inline-block;
  font-size: 28rpx;
  max-width: 100%;
}

.top-round {
  position: relative;
  top: -5rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center !important;
  display: inline-block !important;
  border-radius: 50%;
}

.bottom-round {
  position: relative;
  bottom: -22rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center !important;
  display: inline-block !important;
  border-radius: 50%;
}

.num {
  color: #fff;
  transform: rotate(-45deg);
  text-align: center;
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  left: 2rpx;
  font-size: 22rpx;
  top: 2rpx;
}

.goods-item2 {
  width: 100%;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx #eee solid;
}

.goods-img2 {
  flex: 1;
  width: 250rpx;
  height: 250rpx;
}

.goods-info2 {
  flex: 2;
}

.goods_coupon {
  position: relative;
  padding: 0 10rpx;
  height: 36rpx;
  background: #ff9960;
  border-radius: 4rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #fff;
}

.clb {
  position: absolute;
  width: 14rpx;
  background-color: #fff;
  border-radius: 100%;
  margin-top: -6rpx;
  top: 50%;
  height: 12rpx;
}

.cl {
  left: -7rpx;
}

.cr {
  right: -7rpx;
}

.btn {
  width: 120rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #df2434;
  color: #fff;
  font-size:24rpx;
  text-align: center;
  border-radius: 5rpx;
}
